{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",                                
    "rootDir": "./src",    
    "allowJs": true,                                  
    "checkJs": true,  
    "outDir": "./dist",                    
    "noEmitOnError": true,   
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,      
    "strict": true,
    "skipLibCheck": true           
  }
}
